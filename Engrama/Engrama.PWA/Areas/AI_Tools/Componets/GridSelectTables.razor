@using Engrama.PWA.Areas.DataBase.Components
@inherits EngramaComponent

<MudGrid>

	@if (bConnectionStringTable)
	{

		<MudItem sm="12">

			<MudCard>
				<MudCardHeader>
					<CardHeaderContent>
						<MudText Typo="Typo.h6">Seleccione la Cadena de conexión para trabajar.</MudText>
					</CardHeaderContent>
				</MudCardHeader>
				<MudCardContent>
					<TableConnectios Data="@DataBase"
									 bDataBaseModule="true"
									 OnConnectionStringSelected="OnConnectionStringSelected" />
				</MudCardContent>
			</MudCard>

		</MudItem>
	}
	else
	{

		<MudItem sm="12">
			<MudExpansionPanels MultiExpansion="true">

				<MudExpansionPanel Text="Tablas" Expanded="@Expand">
					<ListTables LstTables="@DataBase.LstTables"
								OnTablaSelected="OnTablaSelected" />
				</MudExpansionPanel>

			</MudExpansionPanels>

		</MudItem>

	}

</MudGrid>
